<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true" scanPeriod="30 minutes">
	<property name="log.base" value="/app/logs/parent" />
	<property name="LOG_PATTERN"
		value="[%X{LOGGER_NAME}] %date [%thread] %-5level %logger{80} - %msg%n" />

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<charset>UTF-8</charset>
			<pattern>${LOG_PATTERN}</pattern>
		</encoder>
	</appender>

	<appender name="server_all"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${log.base}/parent.log</File>
		<append>true</append>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${LOG_HOME}/parent-%d{yyyy-MM-dd}.%i.zip
			</FileNamePattern>
			<maxHistory>7</maxHistory>
		</rollingPolicy>
		<encoder>
			<charset>UTF-8</charset>
			<pattern>${LOG_PATTERN}</pattern>
		</encoder>
	</appender>

	<root>
		<level value="INFO" />
		<appender-ref ref="STDOUT" />
		<!-- <appender-ref ref="server_all"></appender-ref> -->
	</root>

	<logger name="druid.sql.Statement" level="DEBUG"/>
	<logger name="org.mybatis" level="DEBUG" />
	<logger name="org.springframework" level="DEBUG" />
	<logger name="org.apache" level="DEBUG"/>

</configuration>